<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg">

            <!--  Header  Starts-->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <!-- Logo Start-->
                <ImageView android:src="@drawable/bikerama_ldpi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"/>
                <!-- Logo Ends -->
            </LinearLayout>
            <!--  Header Ends -->

            <!-- Footer Start -->
            <LinearLayout
                android:id="@+id/footer"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="203dip"
                android:background="@drawable/footer_repeat"
                android:layout_alignParentBottom="true">
            </LinearLayout>
            <!-- Footer Ends -->

            <!-- Registration Form -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_below="@id/header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="5dp"
                    android:text="@string/cadastro_componentes_bike"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="5dp"
                    android:text="@string/cadastro_componentes_bike_linha2"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/cadastro_componentes_bike_linha3"
                    android:textSize="12dp"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/cadastro_componentes_bike_linha4"
                    android:textSize="12dp"
                    android:textStyle="italic"/>

                <!-- Controle Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Label -->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="@string/cadastro_componentes_bike_controle"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Guidão -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputGuidao"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="textAutoComplete"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputGuidao"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Manete de freio -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputManetefreio"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputManetefreio"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Direcao -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputDirecao"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputDirecao"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Passador de marcha -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputPassador"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputPassador"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Mesa -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputMesa"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputMesa"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Transmissao Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Label -->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="@string/cadastro_componentes_bike_transmissao"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Pedivela -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputPedivela"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputPedivela"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Coroa maior -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCoroaMaior"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCoroaMaior"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Coroa Intermediaria -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCoroaIntermediaria"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCoroaIntermediaria"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Coroa Menor -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCoroaMenor"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCoroaMenor"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Corrente -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCorrente"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCorrente"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Cassete -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCassete"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCassete"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Movimento central -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCentral"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCentral"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Pedal -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputPedal"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputPedal"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Cambio dianteiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCambioDianteiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCambioDianteiro"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Cambio Traseiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCambioTraseiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCambioTraseiro"
                        />
                </android.support.design.widget.TextInputLayout>


                <!-- Frente Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Label -->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="@string/cadastro_componentes_bike_frente"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Garfo ou Suspensão dianteira -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputGarfo"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputGarfo"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Aro dianteiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputAroFrente"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputAroFrente"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Cubo dianteiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCuboFrente"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCuboFrente"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Pneu dianteiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputPneuFrente"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputPneuFrente"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Freio dianteiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputFreioFrente"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputFreioFrente"
                        />
                </android.support.design.widget.TextInputLayout>


                <!-- Traseira Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Label -->
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="@string/cadastro_componentes_bike_traseira"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Suspensão traseira -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputShock"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputShock"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Aro traseiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputAroTraseiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputAroTraseiro"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Cubo Traseiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputCuboTraseiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputCuboTraseiro"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Pneu Traseiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputPneuTraseiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputPneuTraseiro"
                        />
                </android.support.design.widget.TextInputLayout>

                <!-- Freio Traseiro -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/inputFreioTraseiro"
                        android:layout_width="fill_parent"
                        android:layout_height="70px"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="#ffffff"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_below="@+id/inputFreioTraseiro"
                        />
                </android.support.design.widget.TextInputLayout>



                <!-- Register Button -->
                <Button android:id="@+id/btnSubmit"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/button_shape"
                    android:text="@string/action_salvar"
                    android:textStyle="bold" />


            </LinearLayout>
            <!-- Registration Form Ends -->
        </RelativeLayout>
    </ScrollView>

</LinearLayout>