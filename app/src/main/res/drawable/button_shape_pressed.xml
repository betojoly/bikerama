<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressionado -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="#FF0BB60B"
                android:endColor="#0ede0e"
                android:type="linear"
                />
            <stroke
                android:width="1dp"
                android:color="#FF0BB60B"
                />
        </shape>
    </item>

    <!-- normal-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="#FFD90036"
                android:endColor="#a10028"
                android:type="linear"
                />
            <stroke
                android:width="1dp"
                android:color="#FFD90036"
                />
        </shape>
    </item>

</selector>